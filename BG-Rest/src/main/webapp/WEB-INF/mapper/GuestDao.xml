<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aia.guest.dao.GuestDao">



 <!-- 방명록 전체게시글 출력 -->
<select id="selectList" parameterType="map" resultType="com.aia.guest.model.Guest_book">
<![CDATA[
SELECT *

FROM Mangchi.guest_book

where (6371*acos(cos(radians(#{param1}))*cos(radians(x))*cos(radians(y)

	-radians(#{param2}))+sin(radians(#{param1}))*sin(radians(x)))) <= #{param3}
	order by guest_idx desc

 ]]>


</select>

<!--  방명록 글쓰기 -->
<insert id="insertPost" parameterType="com.aia.guest.model.Guest_book">

INSERT INTO Mangchi.guest_book (guest_writer,guest_text,guest_photo,x,y,member_img) VALUES (#{guest_writer},#{guest_text},#{guest_photo},#{x},#{y},#{member_img})

</insert>


<!-- 상세게시글 -->
<select id="selectByIdx" resultType="com.aia.guest.model.Guest_book">

	select * from  Mangchi.guest_book where guest_idx=#{guest_idx}
</select>

<!-- 좋아요누름 -->
<update id="updatelikeup" parameterType="com.aia.guest.model.Guest_book"  >
<![CDATA[update Mangchi.guest_book set guest_like = ifnull(guest_like,0)+1 where guest_idx=#{guest_idx}]]>
</update>

<!-- 좋아요취소 -->
<update id="updatelikedown" parameterType="com.aia.guest.model.Guest_book"  >
<![CDATA[update Mangchi.guest_book set guest_like = ifnull(guest_like,0)-1 where guest_idx=#{guest_idx}]]>
</update>


<!-- 게시글삭제 -->
<delete id="deleteIdx">
delete from Mangchi.guest_book where guest_idx=#{guest_idx}
</delete>


</mapper>